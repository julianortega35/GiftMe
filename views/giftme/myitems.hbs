<h2 class="h2myitems">My Items</h2>

<div class="divitem">
    {{#each item.myItems}}
        <div class="itemForm">
            <p>{{name}}</p>
            <img src="{{image}}"  alt=""> 
            <form action="/myitems/{{_id}}/delete" method="post">
                <button class="button" type="submit">Delete</button>
            </form>
        </div>
    {{/each}}
</div>

<!-- CREATE FORM -->
<div class="addForm">
    <p>Add your items!</p>
    
    <form action="/item/create" method="post" enctype="multipart/form-data">
    <div class="form-div">
        {{!-- <label  for="" >Image:</label> --}}
        <input type="file" name="image" class="custom-file-input-mi" />   
        
        {{!-- <label for=""> Name: </label> --}}
        <input type="text" name="name" placeholder="Name"/>
        
        {{!-- <label for="">Description:</label> --}}
        <textarea type="text" name="description" placeholder="Description"></textarea> 
          </div> 
        
        <button class="button" type="submit">Add item</button>
      
    </form>
</div>


