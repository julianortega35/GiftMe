<a class="logoarrow" href="/"><img src="../images/pngegg.png" alt="logoArrow" height="30px"></a>
<h2 class="h2">My Items</h2>
<div class="divitem">
    {{#each user.myItems}}
        <div class="itemForm">
            <h4 class="nametag">{{name}}</h4>
            <img src="{{image}}"  alt=""> 
            <p class="descrip">{{description}}</p>
            <form action="/myitems/{{_id}}/delete" method="post">
                <button class="button" type="submit">Delete</button>
            </form>
        </div>
    {{/each}}
</div>

<!-- CREATE FORM -->
<div class="addForm">

    <p>Add your items!</p>
    
    <form action="/item/create" method="post" enctype="multipart/form-data">
        <div class="form-div">
            <input type="file" name="image" class="custom-file-input-mi" />    
            
            <input type="text" name="name" placeholder="Name"/>
              
            <textarea type="text" name="description" placeholder="Description"></textarea> 
        </div>   
        <button class="myButton" type="submit">Add item</button>
    </form>


          {{#if errorMessage}}
    <p class="error-message">
        {{ errorMessage }}
    </p>
    {{/if}}
</div>



